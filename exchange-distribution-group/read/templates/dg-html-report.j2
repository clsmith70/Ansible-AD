<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=us-ascii">
        <style>
            body {
                text-align: center;
            }
            h2 {
                margin: auto;
            }
            
            table {
                border-collapse: collapse;
                margin: auto;
            }
            
            table, th, tr, td {
                border: 1px solid black;
            }
            th, td {
                padding: 15px;
                text-align: left;
            }
            th {
                background-color: #63666A;
                color: #FFF;
            }
            tr:nth-child(even) {
                background-color: #72C8CE;
            }
        </style>
    </head>
    <body>
        <h2>Distribution Group Query Report</h2>
        <table>
            <thead>
                <tr>
                    <th>DisplayName</th>
                    <th>Alias</th>
                    <th>Email Address</th>
                    <th>Group Type</th>
                </tr>
            </thead>
            <tbody>
            {% for result in distribution_group_detail.output %}
                <tr>
                    <td>{{ item.DisplayName }}</td>
                    <td>{{ item.Alias }}</td>
                    <td>{{ item.PrimarySmtpAddress }}</td>
                    <td>{{ item.GroupType }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <h3>Group Members</h3>
        <table>
            <thead>
                <tr>
                    <th>DisplayName</th>
                    <th>Alias</th>
                    <th>Email Address</th>
                    <th>Recipient Type</th>
                </tr>
            </thead>
            <tbody>
            {% for result in distribution_group_members.output %}
                <tr>
                    <td>{{ item.DisplayName }}</td>
                    <td>{{ item.Alias }}</td>
                    <td>{{ item.PrimarySmtpAddress }}</td>
                    <td>{{ item.RecipientType }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </body>
</html>
